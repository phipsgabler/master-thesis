%-------------------------------------------------------------------------------
% BASIC STYLES
%
\lstset{%
  basicstyle=\ttfamily,
  showstringspaces=false,
  basewidth=\ml@fullbasewidth,
  lineskip=-1.5pt,
  aboveskip=1ex,
  belowskip=1ex,
  %escapeinside=»«,
}

\lstdefinestyle{colored}{%
  keywordstyle=\color{textblue},
  identifierstyle=,
  commentstyle=\color{textgray},
  stringstyle=\color{textgreen},
}

\lstdefinestyle{blackwhite}{%
  keywordstyle=\bfseries,
  identifierstyle=,
  commentstyle=\color{textgray},
  %stringstyle=\color{textred},
}

\lstdefinestyle{inline}{%
  basicstyle=\ttfamily\color{black},
  keywordstyle=\color{black},
  stringstyle=\color{black},
  commentstyle=\color{black},
  basewidth=\ml@smallbasewidth,
  breaklines=true,
  breakatwhitespace=true,
  columns=spaceflexible,keepspaces,
  keywordstyle=\color{black},
}

\lstdefinestyle{numbered}{%
  numbers=left,
  numberstyle=\tiny,
  stepnumber=5,
  firstnumber=1,
  numberfirstline=true,
  %numberblanklines=false,
  numbersep=5pt
}

\lstdefinestyle{numbered-short}{%
  numbers=left,
  numberstyle=\tiny,
  stepnumber=5,
  firstnumber=1,
  numbersep=5pt
}

\lstdefinestyle{bold}{%
  moredelim=[is][\textbf]{***}{***}
}

\lstdefinestyle{underline}{%
  moredelim=[is][\@boldunderline]{___}{___}
}


\lstdefinestyle{break-lines}{%
  breaklines=true,
  breakatwhitespace=true,
  breakindent=4\ml@fullbasewidth,
  %prebreak=\mbox{\ml@lefthook},
  postbreak=\makebox[0pt]{\kern-1.5\ml@hookwidth\ml@righthook}
}

\lstdefinestyle{floating}{%
  float,
  frame=lines,
  basicstyle=\ttfamily\small,
  captionpos=b,
  style=numbered,
  xleftmargin=0.5ex,
  framexleftmargin=0.5ex,
  numbersep=0pt,
  belowskip=0pt
}

\lstdefinestyle{fullpage}{%
  basicstyle=\ttfamily,
  style=break-lines,
  numbers=left,
  numberstyle=\tiny,
  stepnumber=5,
  firstnumber=1,
  numberfirstline=true,
  %numberblanklines=false,
  numbersep=5pt,
  belowskip=2\baselineskip
}

